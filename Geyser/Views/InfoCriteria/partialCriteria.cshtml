
@using PagedList.Mvc;
@model PagedList.IPagedList<Geyser.Models.TblInfoCriteria>
@using Geyser.Models
<div id="ajaxnhan">
    <div class="row-fluid">
        <div class="span3">
            <div style="margin-top:18px;">
                Tổng số tiêu trí: @Html.Raw(ViewBag.chuoicout)
            </div>
        </div>
        <div class="span9">
            <div class="pagination pagination-small pagination-right">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, idcate = @ViewBag.IdCate, pageSizes = @ViewBag.pageSizes, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)
            </div>

        </div>
    </div>
    <table class="table table-striped table-bordered dataTable table-hover" cellspacing="0" id="cph_Main_ctl00_ctl00_grvProducts" style="border-collapse:collapse;">
        <tr>
            <th scope="col">
                <input id="cph_Main_ctl00_ctl00_grvProducts_chkAll" type="checkbox" name="ctl00$cph_Main$ctl00$ctl00$grvProducts$ctl01$chkAll" onclick="javascript:SelectAllCheckboxes(this);" />
            </th>
            <th scope="col">Danh mục</th>
            <th scope="col">Số TT</th>
            <th scope="col">Trạng thái</th>

            <th scope="col">Thao tác</th>
        </tr>
        @foreach (var item in Model)
        {

            <tr class="row0">
                <td align="center" style="width:8px;">
                    <input id="chk_@item.Id" type="checkbox" name="chk_@item.Id" />

                </td>
                <td>
                    <a title="Sửa module @item.Name" href="../../InfoCriteria/Edit?id=@item.Id" id="@Html.Raw("lbtUpdateProduct")@item.Id"> @item.Name  </a>
                </td>
                <td class="OrderNumber" align="center" style="width:45px;">
                    <input type="text" id="txtOrderNumber" style="width: 30px;" value="@item.Ord" onchange="javascript:return UpdateCriteria(@item.Id);" />
                </td>
                <td class="Active text-center" align="center" style="width:45px;">
                    @if (item.Active == true)
                    {
                        <input type="checkbox" id="cbIsActive" name="cbIsActive" value="true" checked onchange="javascript:return UpdateCriteria(@item.Id);" />
                    }
                    else
                    {
                        <input type="checkbox" id="cbIsActive" name="cbIsActive" value="false" onchange="javascript:return UpdateCriteria(@item.Id);" />
                    }
                </td>

                <td class="text-center" align="center" style="width:90px;">
                    <a class="action-link-button" title="Sửa" href="../../InfoCriteria/Edit?id=@item.Id">
                        <i class="icon-edit"></i>
                    </a>
                    <a href="" class="action-link-button" id="@item.Id" onclick="javascript:return DeleteCriteria(@item.Id);" title="Xóa sản danh mục">
                        <i class="icon-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
    <div class="pagination pagination-small pagination-right">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page, idcate = @ViewBag.IdCate, pageSizes = @ViewBag.pageSizes, sortOrder = ViewBag.CurrentSortOrder, sortName = ViewBag.CurrentSortName, sortLevel = ViewBag.CurrentSortLevel }), (PagedListRenderOptions)ViewBag.ship)
    </div>
</div>
